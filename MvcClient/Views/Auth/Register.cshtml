@model MvcClient.Models.Auth.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<H1>Регистрация</H1>
<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="text" id="username" name="username" placeholder="Имя пользователя"/>
    </div>
    <div class="form-group">
        <input type="email" id="email" name="email" placeholder="Адрес электронной почты"/> 
    </div>
    <div class="form-group">
        <input type="password" id="password" name="password" placeholder="Пароль"/>
    </div>
    <div class="form-group">
            <input type="password" id="password-repeat" name="password-repeat" placeholder="Повторите пароль"/>
        </div>
    <div class="form-group">
        <input type="submit" value="Войти"/>
    </div>
</form>